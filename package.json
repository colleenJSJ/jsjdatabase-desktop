{
  "name": "johnson-database-v1",
  "version": "0.1.17",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "NODE_ENV=development next dev -p 3007",
    "dev:clean": "rm -rf .next && NODE_ENV=development next dev -p 3007",
    "build": "next build && npm run build:copy-standalone",
    "build:copy-standalone": "cp -r .next/static .next/standalone/.next/static && cp -r public .next/standalone/public",
    "start": "next start -p 3007",
    "lint": "next lint",
    "hash-passwords": "tsx scripts/hash-existing-passwords.ts",
    "remove-logs": "tsx scripts/remove-console-logs.ts",
    "test:event-sync": "tsx scripts/test-event-sync.ts",
    "clear-cache": "tsx scripts/clear-extraction-cache.ts",
    "electron": "electron electron/main.js",
    "electron-dev": "NODE_ENV=development electron electron/main.js",
    "electron-build": "electron-builder",
    "dist": "npm run build && electron-builder",
    "release": "npm run build && electron-builder --publish always",
    "dev-all": "concurrently \"npm run dev\" \"wait-on http://localhost:3007 && npm run electron-dev\""
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.60.0",
    "@googlemaps/js-api-loader": "^1.16.10",
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.14",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.55.0",
    "@tanstack/react-query": "^5.85.5",
    "@tanstack/react-query-devtools": "^5.85.5",
    "@types/react-virtualized-auto-sizer": "^1.0.4",
    "@types/react-window": "^1.8.8",
    "@upstash/ratelimit": "^2.0.6",
    "@upstash/redis": "^1.35.3",
    "backblaze-b2": "^1.7.0",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "electron-updater": "^6.6.2",
    "framer-motion": "^12.23.12",
    "fuse.js": "^7.1.0",
    "googleapis": "^156.0.0",
    "lucide-react": "^0.539.0",
    "next": "15.4.6",
    "next-pwa": "^5.6.0",
    "pdf-parse": "^1.1.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "react-virtualized-auto-sizer": "^1.0.26",
    "react-window": "^1.8.11",
    "react-window-infinite-loader": "^1.0.10",
    "sharp": "^0.34.3",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.1.0",
    "web-push": "^3.6.7",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/bcryptjs": "^2.4.6",
    "@types/google.maps": "^3.58.1",
    "@types/node": "^20.19.10",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.1",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.4",
    "typescript": "5.9.2",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.familyoffice.desktop",
    "productName": "JSJ Database",
    "asar": false,
    "directories": {
      "output": "dist",
      "buildResources": "electron/resources"
    },
    "files": [
      "electron/**/*",
      ".next/standalone/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg"
      ],
      "artifactName": "${productName}-${version}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "colleenJSJ",
        "repo": "jsjdatabase-desktop"
      }
    ]
  }
}
